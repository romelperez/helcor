{
  "extends": [
    "plugin:flowtype/recommended",
    "eslint:recommended",
    "prettier"
  ],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "env": {
    "es6": true
  },

  "plugins": [
    "flowtype",
    "prettier"
  ],

  "rules": {
    "quotes": ["error", "single"],
    "flowtype/no-types-missing-file-annotation": 0
  }
}
